# Docker Compose Environment Variables
COMPOSE_PROJECT_NAME=sphereofinfluence

# Domain Configuration  
DOMAIN=sphereofinfluence.click
CERTBOT_EMAIL=admin@sphereofinfluence.click

# Database Configuration
DB_NAME=sphereofinfluence
DB_USER=sphereofinfluence
DB_PASSWORD=changeme_secure_password

# Redis Configuration
REDIS_PASSWORD=changeme_redis_password

# Backend Configuration
GIN_MODE=release
TLS_ONLY=true
HTTPS_PORT=8443

# Frontend Configuration
NODE_ENV=production

# Deployment Mode
# Options: development, production
DEPLOYMENT_MODE=production

# SSL Configuration
# Set to 'true' for production with Let's Encrypt certificates
SSL_VERIFY=true