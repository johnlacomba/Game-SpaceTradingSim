# Development environment example
aws_region     = "us-east-1"
project_name   = "sphere-of-influence"
environment    = "dev"
domain_name    = "sphereofinfluence.click"  # Override if you use a different domain per environment
apex_a_record_ip = ""                        # Set to your server/public load balancer IP to publish DNS

cognito_callback_urls = [
  "http://localhost:5173",
  "https://localhost:5173"
]

cognito_logout_urls = [
  "http://localhost:5173",
  "https://localhost:5173"
]

# Set to true to enable ECS deployment
enable_ecs = false

# Enable Google Sign-In on Cognito Hosted UI (optional)
enable_google_idp   = false
google_client_id    = ""       # e.g. 1234567890-abcdefg.apps.googleusercontent.com
google_client_secret = ""      # keep this secret
